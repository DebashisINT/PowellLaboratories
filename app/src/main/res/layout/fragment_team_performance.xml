<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_light_sky"
    android:focusable="true"
    android:clickable="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_frag_own_perf_attend_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:text="Attendance Report"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center|start"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="(Last Month)"
                            android:paddingLeft="@dimen/_2sdp"
                            android:textSize="@dimen/_9sdp"
                            android:gravity="center|start"
                            android:textColor="@color/black" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_3sdp"
                            android:orientation="vertical"
                            app:cardBackgroundColor="#228ba1"
                            app:cardCornerRadius="@dimen/_15sdp"
                            android:padding="@dimen/_5sdp"
                            app:cardElevation="@dimen/_5sdp">

                            <ImageView
                                android:id="@+id/iv_frag_ord_prod_mic"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_gravity="center"
                                android:scaleType="fitCenter"
                                android:backgroundTint="@color/white"
                                android:background="@drawable/ic_share"
                                android:layout_margin="@dimen/_2sdp"
                                android:padding="@dimen/_5sdp"/>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_frag_team_performnace_sel_team_member"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:drawableTint="@color/black"
                        android:hint="Select Team"
                        android:paddingStart="@dimen/_10sdp"
                        android:singleLine="true"
                        android:textSize="@dimen/_11sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:background="@drawable/simple_border_rec_bg"
                        android:drawableEnd="@drawable/ic_down_arrow"
                        android:paddingEnd="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center|start" />





                    <LinearLayout
                        android:id="@+id/atten_ll_frag_team_per"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150sdp"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.6"
                            android:orientation="vertical"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:background="@drawable/border_background_simple">

                                <ImageView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:src="@drawable/ic_user_newscr"
                                    android:layout_marginLeft="@dimen/_5sdp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="Present"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_frag_own_performance_present_atten"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.6"
                                    android:layout_gravity="end"
                                    android:gravity="center"
                                    android:text="14"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold"
                                    android:background="@drawable/border_background_small_1"
                                    android:backgroundTint="#0019b2"/>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:background="@drawable/border_background_simple"
                                android:layout_marginTop="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:src="@drawable/ic_user_newscr"
                                    android:layout_marginLeft="@dimen/_5sdp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="Absent"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_frag_own_performance_absent_atten"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.6"
                                    android:layout_gravity="end"
                                    android:gravity="center"
                                    android:text="14"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold"
                                    android:background="@drawable/border_background_small_1"
                                    android:backgroundTint="#f5862c"/>


                            </LinearLayout>


                        </LinearLayout>

                        <Space
                            android:layout_width="@dimen/_5sdp"
                            android:layout_height="match_parent" />


                        <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                            android:id="@+id/aa_chart_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp">

                        </com.github.aachartmodel.aainfographics.aachartcreator.AAChartView>



                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>



</LinearLayout>